<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-push-2">
			<br />
		</div>
		<% if user_signed_in? %> 
			<%= react_component( "Posts", { posts: @posts }) %> 
		<% else %> 
			<% @posts.each do |post| %> 
				<div class="form_container post col-md-8 col-md-push-2">
					<h3><%= link_to post.title, post_path(post) %></h3>
					<h4><%= post.author %></h4>
					<p><%= post.content %></p>
					<% if post.video? %>
						<div class="embed-responsive embed-responsive-16by9 video">
		  					<iframe class="embed-responsive-item" src="<%= post.video %>"></iframe>
						</div>
					<% end %> 
					<br />
					<button class="btn btn-primary comments_view">Comments</button>
					<div class="comment_container">
						<%= form_for [post, @comment] do |comment| %>
							<div class='form-group'>
								<%= comment.text_area :content, class: 'form-control' %>
							</div>
							<div class='form-group'>
								<%= comment.submit 'Create', class: 'btn btn-primary' %>
							</div>
						<% end %> 
						<br />
						<% post.comments.order(created_at: :desc).each do |comment| %>
							<p><%= comment.content %></p>
							<p><%= time_ago_in_words(comment.created_at) %></p>
							<br />
						<% end %> 
					</div>
				</div>
			<% end %> 
		<% end %>
	</div>
</div>